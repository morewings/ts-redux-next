{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "additional.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.stories.tsx",
        "**/*.stories.ts",
        "*.config.ts",
        "src",
        "app",
        ".eslintrc.cjs",
        "templates/**/*.ts",
        "templates/**/*.tsx",
        "build/types/**/*.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
